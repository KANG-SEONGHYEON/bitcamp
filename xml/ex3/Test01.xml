<?xml version="1.0" encoding="UTF-8"?>
<!-- 엘리먼트 속성 - 속성(attribute)
<!ATTLIST 태그명
    속송명 타입 옵션
    속송명 타입 옵션>
-->

<!DOCTYPE items [
<!ELEMENT items (book|dvd)*>
<!ELEMENT book (#PCDATA)>
<!ATTLIST book 
    title CDATA #REQUIRED
>
]>
<items>
	<book title="aaaa">
	       이책은 인생에 관한 내용을 담고 있다.
	</book>
</items>
